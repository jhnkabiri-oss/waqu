generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model WaSession {
  id        String   @id @default(uuid())
  sessionId String   @unique
  userId    String   // Supabase User ID
  data      Json
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
}

model Group {
  id          String   @id @default(uuid())
  waGroupId   String   @unique
  userId      String   // Supabase User ID
  name        String
  description String?
  memberCount Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([userId])
}

model BroadcastLog {
  id        String    @id @default(uuid())
  jobId     String
  userId    String    // Supabase User ID
  recipient String
  message   String
  status    String    @default("pending")
  error     String?
  sentAt    DateTime?
  createdAt DateTime  @default(now())

  @@index([userId])
}

model Contact {
  id      String  @id @default(uuid())
  userId  String  // Supabase User ID
  name    String
  phone   String
  synced  Boolean @default(false)

  @@index([userId])
}
